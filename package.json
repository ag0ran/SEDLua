{
  "name": "sedlua",
  "displayName": "SEDLua",
  "description": "SeriousEditor Lua",
  "version": "0.0.2",
  "publisher": "Croteam",
  "repository": {
    "type": "git",
    "url": "https://github.com/ag0ran/SEDLua"
  },
  "engines": {
    "vscode": "^1.38.0"
  },
  "categories": [
    "Snippets",
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:**/*.wld",
    "workspaceContains:**/*.rsc",
    "workspaceContains:**/WorldScripts.lua"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "snippets": [
      {
        "language": "lua",
        "path": "./snippets/snippets.json"
      },
      {
        "language": "lua",
        "path": "./snippets/seSnippets.json"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "worldScripts",
          "name": "World scripts"
        }
      ]
    },
    "configuration": {
      "title": "SED lua",
      "type": "object",
      "properties": {
        "sedlua.editReadOnlyFiles": {
          "enum": [
            "allow edits",
            "disable edits",
            "disable edits and ask to check out"
          ],
          "description": "Editing of read only files behavior",
          "default": "allow edits"
        },
        "sedlua.autoOpenLastScriptFromEditor": {
          "type": "boolean",
          "description": "Automatically open world scripts opened in Serious Editor?",
          "default": true
        }
      }
    },
    "commands": [
      {
        "command": "sedlua.p4CheckOut",
        "title": "p4 Check out",
        "category": "SEDLua"
      },
      {
        "title": "Remove stale world scripts",
        "command": "sedlua.removeStaleWorldScripts"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "sedlua.removeStaleWorldScripts",
          "when": "view == worldScripts"
        }
      ]
    },
    "keybindings": [
      {
        "command": "sedlua.p4CheckOut",
        "key": "ctrl+shift+enter",
        "mac": "cmd+shift+enter",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/mocha": "^5.2.6",
    "@types/node": "^10.12.21",
    "@types/vscode": "^1.38.0",
    "glob": "^7.1.4",
    "mocha": "^6.1.4",
    "typescript": "^3.3.1",
    "tslint": "^5.12.1",
    "vscode-test": "^1.2.0"
  },
  "dependencies": {
    "@types/xml2js": "^0.4.5",
    "path": "^0.12.7",
    "xml2js": "^0.4.22"
  }
}